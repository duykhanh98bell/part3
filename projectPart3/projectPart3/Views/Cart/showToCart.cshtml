@model projectPart3.Models.Cart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClientShop.cshtml";
}

<!-- Shoping Cart Section Begin -->
@if (Model != null)
{
    <section class="shoping-cart spad">
        
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th class="shoping__product">Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    double total = Convert.ToDouble(item._shopping_quantity * item._shopping_product.gias.gia_khuyen_mai);
                                    <tr>
                                        <td>
                                            <img src="@Html.DisplayFor(model => item._shopping_product.hinh_anh)" alt="" width="250">

                                        </td>
                                        <td>
                                            <h5>@Html.DisplayFor(model => item._shopping_product.ten_sp)</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @Html.DisplayFor(model => item._shopping_product.gias.gia_khuyen_mai)
                                        </td>
                                        @using (Html.BeginForm("updateCart", "Cart"))
                                        {
                                            <td class="shoping__cart__quantity">
                                                <div class="quantity">

                                                    <div class="pro-qty">
                                                        <input type="hidden" name="id_product" value="@Html.DisplayFor(model => item._shopping_product.ma_sp)" />
                                                        <input type="number" name="quantity" value="@Html.DisplayFor(model => item._shopping_quantity)">

                                                    </div>

                                                </div>
                                            </td>
                                            <td class="shoping__cart__total">
                                                @total
                                            </td>
                                            <td class="shoping__cart__item__close">
                                                <input type="submit" name="updateCart" value="Upadate Cart" />
                                                <a href="/Cart/removeCart/@item._shopping_product.ma_sp"><span class="icon_close"></span></a>
                                            </td>
                                        }
                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Checkout", "Cart"))
            {
                <div class="checkout__input">
                    <p>ma khach hang <span>*</span></p>
                    <input type="text" name="ma_kh" required>
                </div>
                <div class="checkout__input">
                    <p>Dia chi giao hang <span>*</span></p>
                    <input type="text" name="ghi_chu" required>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="checkout__input">
                            <label>Chuyen khoan</label>
                            <input type="radio" name="trang_thai" value="0">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="checkout__input">
                            <label>Tien mat</label>
                            <input type="radio" name="trang_thai" checked value="1">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__btns">
                            <a href="@Url.Action("ShowProduct", "Home")" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                            <a href="#" class="primary-btn cart-btn cart-btn-right">
                                <span class="icon_loading"></span>

                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        @*
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Discount Codes</h5>
                            <form action="#">
                                <input type="text" placeholder="Enter your coupon code">
                                <button type="submit" class="site-btn">APPLY COUPON</button>
                            </form>
                        </div>
                    </div>
                        *@
                    </div>
                    <div class="col-lg-6">
                        <div class="shoping__checkout">
                            <h5>Cart Total</h5>
                            <ul>
                                @*<li>Subtotal <span>$454.98</span></li>*@
                                <li>Total <span>$@Model.total_money()</span></li>
                            </ul>
                            <input type="submit" name="name" class="primary-btn" value="Checkout" />
                        </div>
                    </div>
                </div>
            }
        </div>
            


    </section>
    <!-- Shoping Cart Section End -->
}
