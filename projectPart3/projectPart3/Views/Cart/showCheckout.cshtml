@model projectPart3.Models.Cart
@{
    ViewBag.Title = "showCheckout";
    Layout = "~/Views/Shared/_LayoutClientShop.cshtml";
}
@if (Session["client"] != null)
{
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>
                        <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                    </h6>
                </div>
            </div>
            <div class="checkout__form">
                <h4>Billing Details</h4>
                @using (Html.BeginForm("Checkout", "Cart"))
                {
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Fist Name<span>*</span></p>
                                        <input type="text" value=@Session["firstName"]>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Last Name<span>*</span></p>
                                        <input type="text" value=@Session["firstName"]>
                                    </div>
                                </div>
                            </div>
            
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input type="text" value=@Session["client"]>
                                        <input type="hidden" value=@Session["idKhach"] name="ma_kh">
                                    </div>
                                </div>
                            </div>


                            <div class="checkout__input">
                                <p>Địa chỉ giao hàng<span>*</span></p>
                                <input type="text" placeholder="dia chi" name="ghi_chu">
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <label>Chuyen khoan</label>
                                        <input type="radio" name="trang_thai" value="0">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <label>Tien mat</label>
                                        <input type="radio" name="trang_thai" checked value="1">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Your Order</h4>
                                <div class="checkout__order__products">Products <span>Total</span></div>
                                <ul>
                                    @foreach (var item in Model.Items)
                                    {
                                        double total = Convert.ToDouble(item._shopping_quantity * item._shopping_product.gias.gia_khuyen_mai);
                                        <li>@Html.DisplayFor(model => item._shopping_product.ten_sp) <span>@total Đ</span></li>
                                    }
                                </ul>
                                <div class="checkout__order__subtotal">Subtotal <span>@Model.total_money() Đ </span></div>
                                <div class="checkout__order__total">Total <span>@Model.total_money() Đ </span></div>
                                
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                }
                </div>
        </div>
    </section>
    <!-- Checkout Section End -->
}
else
{
    <li>@Html.ActionLink("Đăng ký", "DangKy", "KHACH")</li>
    <li>@Html.ActionLink("Đăng nhập", "DangNhap", "KHACH")</li>
}
